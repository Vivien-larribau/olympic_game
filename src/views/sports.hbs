<h2 class="style_h1">Bienvenu de la partie des sports</h2>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h4 class="style_page_creation">Création</h4>
            <form class="form_style" method="POST" action="/api/sports/post">
                <div class="form-group">
                    <label class="style_label" for="exampleFormControlInput1">Nom</label>
                    <input name="name" id="name" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label class="style_label" for="exampleFormControlTextarea1">Catégory</label>
                    <input name="category" id="category" type="text" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
        </div>

        <div class="col-6">
            <h4 class="style_page_creation">Listing</h4>
            <table class="table table-striped style_tableau">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Catégory</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                {{#each sports}}
                    <form class="form_style" method="DELETE" action="/api/sports/{{_id}}">
                    <div>
                        <tr>
                            <td name="name">{{name}}</td>
                            <td name="category">{{category}}</td>
                            <td><input class="btn btn-danger form-control" type="submit" value="Supprimer"></td>
                    </tr>
                    </div>
                </form>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
