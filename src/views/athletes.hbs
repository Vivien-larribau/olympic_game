<h2 class="style_h1">Bienvenu de la partie des atheletes</h2>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h4 class="style_page_creation">Création</h4>
            <form class="form_style" method="POST" action="/api/athletes/post">
                <div class="form-group">
                    <label class="style_label" for="exampleFormControlInput1">Prénom</label>
                    <input name="firstname" id="firstname" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label class="style_label" for="exampleFormControlTextarea1">Nom</label>
                    <input name="name" id="name" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label class="style_label" for="exampleFormControlTextarea1">Région</label>
                    <input name="region" id="region" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label class="style_label" for="exampleFormControlTextarea1">Dicipline</label>
                    <input name="dicipline" id="dicipline" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label class="style_label" for="exampleFormControlTextarea1">Nombre de médaille</label>
                    <input name="nb_medaille" id="nb_medaille" type="number" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
        </div>

        <div class="col-6">
            <h4 class="style_page_creation">Listing</h4>
            <table class="table table-striped style_tableau">
                <thead>
                <tr>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Région</th>
                    <th scope="col">Dicipline</th>
                    <th scope="col">Nombre de médaille</th>
                    <th scope="col"> Action</th>
                </tr>
                </thead>
                <tbody>
                {{#each athletes}}
                <form class="form_style" method="DELETE" action="/api/athletes/{{_id}}">
                    <div>
                        <tr>
                            <td name="firstname">{{firstname}}</td>
                            <td name="name">{{name}}</td>
                            <td name="region">{{region}}</td>
                            <td name="dicipline">{{dicipline}}</td>
                            <td name="nb_medaille">{{nb_medaille}}</td>
                            <td><input class="btn btn-danger form-control" type="submit" value="Supprimer"></td>
                        </tr>
                    </div>
                </form>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
